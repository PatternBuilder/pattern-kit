{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Quote",
  "category": "component",
  "type": "object",
  "format": "grid",
  "properties": {
    "name": {
      "type": "string",
      "default": "test",
      "options": {
        "hidden": true
      }
    },
    "quotation": {
      "title": "Quote Text",
      "type": "string",
      "format": "textarea"
    },
    "attribution_name": {
      "title": "Attribution",
      "description": "Who said it?",
      "type": "string"
    },
    "attribution_title": {
      "title": "Attribution Title",
      "description": "What is their job title?",
      "type": "string"
    },
    "image": {
      "$ref": "image.json"
    },
    "foo": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "bar": {
            "type": "string"
          },
          "baz": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["name", "quotation", "attribution_name"],
  "additionalProperties": false
}
