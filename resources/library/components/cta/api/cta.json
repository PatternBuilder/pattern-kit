{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Call-to-action link",
    "description": "A call-to-action component which links to a marketing goal or focus for the page/band.",
    "category": "component",
    "type": "object",
    "format": "grid",
    "required": [ "config", "link" ],
    "properties": {
        "name": {
            "type": "string",
            "enum": [ "cta" ],
            "options": {
                "hidden": true
            }
        },
        "template": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "misc_data": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "config": {
            "title": "Configuration",
            "type": "object",
            "required": [ "type" ],
            "format": "grid",
            "properties": {
                "type": {
                    "title": "Type of call-to-action",
                    "type": "string",
                    "enum": [ "primary", "secondary", "disabled", "ghost" ],
                    "default": "primary",
                    "options": {
                        "grid_columns": 6
                    }
                },
                "align": {
                    "title": "Alignment",
                    "type": "string",
                    "enum": [ "left", "center", "right" ],
                    "default": "left",
                    "options": {
                        "grid_columns": 6
                    }
                },
                "semantic": {
                    "title": "Semantics of CTA",
                    "description": "Should this element be a link or a button?",
                    "type": "string",
                    "enum": [ "link", "button", "submit button", "reset button" ],
                    "default": "link",
                    "options": {
                        "hidden": true
                    }
                }
            }
        },
        "link": {
            "title": "Link details",
            "$ref": "link.json"
        }
    },
    "additionalProperties": false
}
