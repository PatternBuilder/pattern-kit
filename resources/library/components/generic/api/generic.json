{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Generic",
    "description": "A component to hold generic HTML markup.",
    "category": "component",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "enum": [ "generic" ],
            "options": {
                "hidden": true
            }
        },
        "template": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "misc_data": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "align": {
            "title": "Alignment",
            "type": "string",
            "enum": [ "left", "center", "right" ],
            "default": "left"
        },
        "content": {
            "type": "string",
            "format": "html"
        }
    },
    "required": [ "content", "name" ],
    "additionalProperties": false
}
