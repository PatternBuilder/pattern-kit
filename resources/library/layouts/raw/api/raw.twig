{% if meta.class %}
    {% set raw_classes %}{% for item in meta.class %} {{ item }}{% endfor %}{% endset %}
{% endif %}


{% set raw_props %}
    {% if meta.id %} id="{{ meta.id }}"{% endif %}
    {% if meta.uniqueId %} data-rh-unique-id="{{ meta.uniqueId }}"{% endif %}
{% endset %}



{% if (isWrapped is defined) and (isWrapped == false) %}
    {{ content|raw }}
{% else %}
    <div class="rh-raw{{ raw_classes }}"{{ raw_props }}>
        {{ content|raw }}
    </div>
{% endif %}
