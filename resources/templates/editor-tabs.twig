<div class="container-fluid">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        {% for tab in tabs %}
            <li role="presentation" class="{{ tab.active ? "active" }}"><a href="#{{ tab.title|replace(' ', '_') }}" aria-controls="{{ tab.title|replace(' ', '_') }}" role="tab" data-toggle="tab">{{ tab.title }}</a></li>
        {% endfor %}
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        {% for tab in tabs %}
            <div role="tabpanel" class="tab-pane {{ tab.active ? "active" }}" id="{{ tab.title|replace(' ', '_') }}">
                {{ tab.content|raw }}
            </div>
        {% endfor %}
    </div>
</div>
