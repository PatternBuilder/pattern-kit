<body>

{% block navigation %}
{% endblock %}

<div class="container-fluid">
    <div class="row">
        {% if block( "secondary_nav" ) %}
            <nav class="secondary-nav col-xs-12 col-sm-3">
                {% block secondary_nav %}{% endblock %}
            </nav>
        {% endif %}

        {% if block( "left" ) %}
            <div class="left col-md-6 {% if block( "secondary_nav" ) %} col-xs-12 col-sm-9 {% endif %}">
                {% block left %}{% endblock %}
            </div>
        {% endif %}

        {% if block( "right" ) %}
            <div class="right col-md-6">
                {% block right %}{% endblock %}
            </div>
        {% endif %}

    </div>
</div>

{% block footer %}{% endblock %}

<script type="text/javascript" src="{{vendor_path}}web/js/schema_editor.js"></script>
</body>
<footer>
    <script>
        // Store tab selections in local storage
        $("a[data-toggle=\"tab\"]").on("shown.bs.tab", function(e) {
            localStorage.setItem("activeTabHash", $(e.target).attr("href"));
        });
        // Get tab selection from local storage
        var activeTabHash = localStorage.getItem("activeTabHash");
        if (activeTabHash) {
            $("a[href=\"" + activeTabHash + "\"]").tab("show");
        }
    </script>
</footer>
</html>
